server {
  listen 80;
  listen [::]:80;

  server_name {{ ansible_host }};

  sub_filter_once on;

  location /nginx-status {
    # only allow local connections from the datadog-agent (agent uses IPv6)
    allow ::1;
    deny all;

    stub_status;

    # ensures the version information can be retrieved
    server_tokens on;
  }

  location / {
    root /var/www/html/homer;

    sub_filter
      '<head>'
      '<head>
      <script src="/datadog/rum.js" type="text/javascript"></script>
      <script>
        window.DD_RUM && window.DD_RUM.init({
          applicationId: "{{ secrets.rum.application_id }}",
          clientToken: "{{ secrets.rum.client_token }}",
          site: "datadoghq.com",
          service: "homer",
          env: "{{ default.env }}",
          version: "{{ homer.version }}",
          sessionSampleRate: 100,
          sessionReplaySampleRate: 100,
          trackResources: true,
          trackLongTasks: true,
          trackUserInteractions: true,
          defaultPrivacyLevel: "mask-user-input",
        });
       </script>';
  }

  location /css {
    alias /var/www/html/theme.park/theme.park-{{ themepark.version }};
  }

  location /datadog {
    alias /var/www/html/datadog;
  }


{% for name in containers %}
{% set container = containers[name] %}

  location /{{ name }}/ {
    proxy_pass http://localhost:{{ container.port }}/{% if name != "qbittorrent" %}{{ name }}/{% endif %};

    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";

    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-Host $http_host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Protocol $scheme;

    proxy_set_header Accept-Encoding "";

    sub_filter
    '</head>'
    '
    <link rel="stylesheet" type="text/css" href="/css/base/{{ name }}/{{ name }}-base.css">
    <link rel="stylesheet" type="text/css" href="/css/theme-options/{{ themepark.theme }}.css">
</head>';

    sub_filter
      '<head>'
      '<head>
      <script src="/datadog/rum.js" type="text/javascript"></script>
      <script>
        window.DD_RUM && window.DD_RUM.init({
          applicationId: "{{ secrets.rum.application_id }}",
          clientToken: "{{ secrets.rum.client_token }}",
          site: "datadoghq.com",
          service: "{{ name }}",
          env: "{{ default.env }}",
          version: "{{ container.version }}",
          sessionSampleRate: 100,
          sessionReplaySampleRate: 100,
          trackResources: true,
          trackLongTasks: true,
          trackUserInteractions: true,
          defaultPrivacyLevel: "mask-user-input",
        });
       </script>';
  }
{% endfor %}
}
