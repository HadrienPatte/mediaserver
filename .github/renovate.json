{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "ansible-galaxy",
    "github-actions",
    "custom.regex"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    },
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchPackageNames": [
        "bastienwirtz/homer"
      ],
      "allowedVersions": "<=100"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "roles/mediaserver/defaults/main.yml"
      ],
      "matchStrings": [
        "\\s+# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s+version: (?<currentValue>.*)"
      ],
      "versioningTemplate": "loose"
    }
  ]
}
